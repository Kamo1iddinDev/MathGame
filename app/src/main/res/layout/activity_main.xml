<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/wnterfon3"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="60dp"
        tools:ignore="UselessParent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:backgroundTint="#A3E5E5E3"
        android:orientation="vertical"
        tools:ignore="HardcodedText,UselessParent">

        <TextView
            android:id="@+id/textviw"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/brend"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="0 + 0"
            android:background="@drawable/radius"
            android:layout_marginBottom="5dp"
            android:textColor="#917768"
            android:textSize="24sp"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <RadioGroup
            android:id="@+id/radg"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:background="@drawable/radius"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rad1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="123"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="#917768"
                tools:ignore="HardcodedText" />
            <RadioButton
                android:id="@+id/rad2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="456"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="#917768"
                tools:ignore="HardcodedText" />
            <RadioButton
                android:id="@+id/rad3"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="789"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#917768"
                tools:ignore="HardcodedText" />
            <RadioButton
                android:id="@+id/rad4"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="100"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#917768"
                tools:ignore="HardcodedText" />
        </RadioGroup>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center">

    <TextView
        android:id="@+id/javob"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/radius"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="c o d i a l"
        android:textSize="24sp"
        android:textColor="#917768"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/btn_next"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_korsatgich"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius"
            tools:ignore="HardcodedText" />
        </LinearLayout>
</LinearLayout>
</LinearLayout>